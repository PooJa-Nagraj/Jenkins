pipeline{
    agent any
    stages{
        stage('checkout'){
            steps{
                git branch : 'main',
                    url: 'https://github.com/PooJa-Nagraj/Jenkins.git',
                    credentialsId: 'github-cred'
            }
        }
        stage('Build and Test'){
            steps{
                sh 'ls -ltr'
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
            }
        }
    }
}