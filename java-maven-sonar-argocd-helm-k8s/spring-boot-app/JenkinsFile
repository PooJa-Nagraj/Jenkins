pipeline{
    agent any
    tools {
        maven 'Maven'
    }
    stages{
        stage('checkout'){
            steps{
                git branch : 'main',
                    url: 'https://github.com/PooJa-Nagraj/Jenkins.git',
                    credentialsId: 'github-cred'
            }
        }
        stage('Build and Test'){
            steps{
                sh 'ls -ltr'
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn -DskipTests clean package'
                
            }
        }
    stage('Static Code Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonar-token', variable: 'sonar-token')]) {
          sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn sonar:sonar -Dsonar.login=$sonar-token -Dsonar.host.url=${sonar-server}'
        }
      }
    }
    }
}
